<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" prefHeight="100.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.kyrtap5.mvgscreen.StopElement">
    <HBox fx:id="leftPane" prefHeight="100.0" prefWidth="1500.0" spacing="15" AnchorPane.leftAnchor="15.0">
        <children>
            <ImageView fx:id="typeImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true"
                       preserveRatio="true"/>
            <Label fx:id="lineLabel" alignment="CENTER" layoutX="25.0" layoutY="27.0" text="X" prefHeight="100"
                   textFill="WHITE" wrapText="true">
                <font>
                    <Font size="40.0"/>
                </font>
            </Label>
            <Label fx:id="destinationLabel" alignment="CENTER" layoutX="25.0" layoutY="27.0" text="Y"
                   textFill="WHITE" prefHeight="100" wrapText="true">
                <font>
                    <Font size="40.0"/>
                </font>
            </Label>
        </children>
    </HBox>

    <HBox fx:id="rightPane" layoutX="350.0" prefHeight="100.0" prefWidth="350.0" spacing="10"
          AnchorPane.rightAnchor="15.0">
        <children>
            <Label fx:id="timeLabel" alignment="CENTER" layoutX="25.0" layoutY="27.0" text="Y" textFill="WHITE"
                   prefHeight="100" wrapText="true">
                <font>
                    <Font size="40.0"/>
                </font>
            </Label>
        </children>
    </HBox>
</AnchorPane>
